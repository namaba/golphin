      section#dateList
        table
          caption クチコミ
          tr
            th クチコミ件数
            td= @cource.rating_num

        / デザインのため最初の1レコードだけ取得してます
        table[style="margin-top: 30px;"]
          caption 評価者のコメント
          tr
            th タイトル
            td= @cource.ratings.first.title
          tr
            th 評価者のニックネーム
            td= @cource.ratings.first.nick_name
          tr
            th 評価者の都道府県
            td= @cource.ratings.first.nick_name
          tr
            th 評価者の年齢
            td= @cource.ratings.first.age
          tr
            th 評価者の性別
            td= @cource.ratings.first.sex
          tr
            th 評価者のGORA利用回数
            td= @cource.ratings.first.times
          tr
            th 評価者の評価（総合）
            td= @cource.ratings.first.evaluation
          tr
            th 評価者の評価（スタッフ）
            td= @cource.ratings.first.staff
          tr
            th 評価者の評価（設備）
            td= @cource.ratings.first.facility
          tr
            th 評価者の評価（食事）
            td= @cource.ratings.first.meal
          tr
            th 評価者の評価（コース）
            td= @cource.ratings.first.course
          tr
            th 評価者の評価(コストパフォーマンス)
            td= @cource.ratings.first.costperformance
          tr
            th 評価者の評価(距離)
            td= @cource.ratings.first.distance
          tr
            th 評価者の評価(フェアウェイの広さ)
            td= @cource.ratings.first.fairway
          tr
            th 評価者のコメント
            td= @cource.ratings.first.comment

        table[style="margin-top: 30px;"]
          caption ゴルフ場情報
          tr
            th ゴルフ場説明文
            td= @cource.golf_course_caption
          tr
            th ゴルフ場からのお知らせ
            td= @cource.information
          tr
            th 電話番号
            td= @cource.telephone_no
          tr
            th 開場日
            td= @cource.open_day
          tr
            th 休場日
            td= @cource.close_day
          tr
            th 使用可能クレジットカード
            td= @cource.credit_card
          tr
            th シューズ指定
            td= @cource.shoes
          tr
            th 服装指定
            td= @cource.dress_code
          tr
            th 付帯施設（練習場）
            td= @cource.practice_facility
          tr
            th 付帯施設(宿泊施設)
            td= @cource.lodging_facility
          tr
            th 付帯施設(その他)
            td= @cource.other_facility
          tr
            th 設計者
            td= @cource.designer
          tr
            th コース種別
            td= @cource.course_type
          tr
            th コース高低
            td= @cource.course_vertical_interval
          tr
            th 面積
            td= @cource.dimension
          tr
            th グリーン
