            td= @cource.longitude
          tr
            th 郵便番号
            td= @cource.postal_code
          tr
            th 所在地
            td= @cource.address

        table[style="margin-top: 30px;"]
          caption 画像
          tr
            th ゴルフ場画像URL1
            td= image_tag @cource.golf_course_image_url1
          tr
            th ゴルフ場画像URL2
            td= image_tag @cource.golf_course_image_url2
          tr
